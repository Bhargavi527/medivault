import axios from 'axios';

const API_BASE = process.env.REACT_APP_API_URL || 'http://localhost:5000/api';

const api = axios.create({
  baseURL: API_BASE,
  timeout: 15000
});

// Attach token to every request
api.interceptors.request.use(config => {
  const token = localStorage.getItem('medivault_token');
  if (token) config.headers.Authorization = `Bearer ${token}`;
  return config;
});

// Handle auth errors
api.interceptors.response.use(
  res => res,
  err => {
    if (err.response?.status === 401) {
      localStorage.removeItem('medivault_token');
      localStorage.removeItem('medivault_user');
      window.location.href = '/login';
    }
    return Promise.reject(err);
  }
);

export const authAPI = {
  register: (data) => api.post('/auth/register', data),
  login: (data) => api.post('/auth/login', data),
  me: () => api.get('/auth/me')
};

export const recordsAPI = {
  getAll: (params) => api.get('/records', { params }),
  add: (formData) => api.post('/records', formData, { headers: { 'Content-Type': 'multipart/form-data' } }),
  delete: (id) => api.delete(`/records/${id}`),
  getByPatient: (patientId) => api.get(`/records/patient/${patientId}`)
};

export const qrAPI = {
  generate: () => api.get('/qr/generate'),
  scan: (token) => api.get(`/qr/scan/${token}`),
  generateForPatient: (patientId) => api.get(`/qr/patient/${patientId}`)
};

export const chatAPI = {
  sendMessage: (data) => api.post('/chat', data),
  getSummary: () => api.get('/chat/summary')
};

export const patientsAPI = {
  getAll: () => api.get('/patients'),
  getOne: (id) => api.get(`/patients/${id}`)
};

export const doctorsAPI = {
  getAll: (params) => api.get('/doctors', { params }),
  getOne: (id) => api.get(`/doctors/${id}`)
};

export default api;
